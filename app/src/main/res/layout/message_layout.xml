<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/messageCardViewMarginLeft"
        android:layout_marginTop="@dimen/messageCardViewMarginTop"
        android:layout_marginRight="@dimen/messageCardViewMarginRight"
        android:background="@color/whiteColor"
        app:cardCornerRadius="@dimen/messageCardViewCardCornerRadious"
        app:cardElevation="@dimen/messageCardViewCardElevetion">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tvMsgLayoutMsgId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="@dimen/messageTextPadding"
                android:text=" "
                android:textColor="@color/txtColor"
                android:textSize="@dimen/textSize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/messageViewHeight"
                android:layout_marginLeft="@dimen/messageViewMarginRight"
                android:layout_marginTop="@dimen/messageViewMarginTop"
                android:layout_marginRight="@dimen/messageViewMarginLeft"
                android:layout_marginBottom="@dimen/messageViewMarginBottom"
                android:background="@color/basicColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/messageBottomMarginLeft"
                android:layout_marginRight="@dimen/messageBottomMarginRight"
                android:layout_marginBottom="@dimen/messageBottomMarginBottom"
                android:orientation="horizontal"
                android:weightSum="3"

                >

                <LinearLayout
                    android:id="@+id/linLayMsgLayoutFav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivMsgLayoutFavId"
                        android:layout_width="@dimen/messageIconWidth"
                        android:layout_height="@dimen/messageIconWidth"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_favourite_select" />

                    <TextView
                        android:id="@+id/tvMsgLayoutFavId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/messageIconTextMarginLeft"
                        android:text="Love"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/textMessageSize"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayMsgLayoutCopy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/messageIconWidth"
                        android:layout_height="@dimen/messageIconWidth"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_copy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/messageIconTextMarginLeft"
                        android:text="Copy"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/textMessageSize"
                        android:textStyle="bold"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayMsgLayoutShare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/messageIconWidth"
                        android:layout_height="@dimen/messageIconWidth"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_share"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/messageIconTextMarginLeft"
                        android:text="Share"
                        android:textColor="@color/txtColor"
                        android:textSize="@dimen/textMessageSize"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>