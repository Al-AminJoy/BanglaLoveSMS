<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basicColor"
        android:orientation="horizontal"
        android:padding="@dimen/menuPadding"
        android:weightSum="6">

        <ImageView
            android:id="@+id/ivToolbarMenuIconId"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menuIcon"
            android:layout_gravity="start|center"
            android:layout_marginLeft="@dimen/menuIconMarginLeft"
            android:src="@drawable/ic_menu"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/menuIconMarginLeft"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/tvToolbarHomeTitleId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="6"
                android:text="@string/home"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textSize"
                android:textStyle="bold" />

            <!--Change the icon hight to match parent-->
            <ImageView
                android:id="@+id/ivToolbarHomeFavId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:src="@drawable/ic_favourite_list" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>